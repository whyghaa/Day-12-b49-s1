<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Web</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
      crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body style="font-family: 'Poppins', sans-serif;">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg " style="background-color: #26292b;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img 
            src="../image/R.png" 
            alt="Bootstrap" 
            width="40px" 
            height="40px">
        </a>
        <button 
            class="navbar-toggler text-white" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fa-solid fa-bars my-1"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ms-3">
              <a 
                  class="nav-link text-white fw-bold" 
                  aria-current="page" 
                  href="/">Home</a>
            </li>
            <li class="nav-item ms-3">
              <a class="nav-link text-white fw-bold" href="/blog">Blog</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a 
                class=" btn btn-outline active text-white fw-bold" 
                style="background-color: #a2b2ee;" 
                type="submit" href="#">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Contact -->
    <section>
      <div class="container p-4" style="width: 100%;">
        <div class="row justify-content-center">
          <div class="col-sm-4 text-start m-3">
            <h2 class="text-center">GET IN TOUCH</h2>
            <div class="mb-3">
              <label for="input-name" class="form-label fs-4">Name</label>
              <input type="text" class="form-control shadow-sm bg-secondary-subtle" id="name" />
            </div>
            <div class="mb-3">
              <label for="input-email" class="form-label fs-4">Email</label>
              <input type="email" class="form-control shadow-sm bg-secondary-subtle" id="email" />
            </div>
            <div class="mb-3">
              <label for="input-phone" class="form-label fs-4 ">Phone Number</label>
              <input
                type="number"
                class="form-control shadow-sm bg-secondary-subtle"
                id="input-phone" />
            </div>
            <div class="mb-3">
              <label for="input-email" class="form-label fs-4">Subject</label>
              <select id="subject" class="form-control shadow-sm bg-secondary-subtle">
                <option value="" hidden></option>
                <option>Frontend</option>
                <option>Backend</option>
                <option>Fullstack</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="input-message" class="form-label fs-4">Your Message</label>
              <textarea
                class="form-control shadow-sm bg-secondary-subtle"
                id="massage"
                rows="3"
                style="height: 200px; resize: none"></textarea>
            </div>
            <div class="mb-3 d-flex justify-content-end my-4">
              <button
                class="btn btn-primary rounded-pill px-4"
                type="button"
                onclick="submitData()">Submit</button>
            </div>
          </div>
        </div>
      </div>
      <script src="../js/contact.js"></script>
    </section>
    <!-- end Contact -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>